public class Die
{
  private int numDots;
  private int dSize;
  
  public Die(int i){
	  dSize = i;
  }
  
  // Sets numDots to a random integer from 1 to 6
  public void roll()
  {
    numDots = (int)(dSize * Math.random()) + 1;
  }

  // Returns numDots
  public int getNumDots()
  {
    return numDots;
  }
}